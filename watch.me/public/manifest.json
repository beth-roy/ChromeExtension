{
  "manifest_version": 2,
  "name": "watch.me",
  "description": "This extension monitors the values marked down by user and notify them just in case",
  "version": "0.0.1",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
  ],
  "icons": {
    "128": "watchMeIcon.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-TQC8dPhRjFkiyjAGQxHTzg2OETliRS530/ikyCMAXD4='; object-src 'self'",
  "background": {
    "scripts": ["app/automation-script.js"]
  }
}
